<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Organizze" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="expensiveTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@color/colorPrimaryExpensive</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkExpensive</item>
        <item name="colorAccent">@color/colorAccentExpensive</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkExpensive</item>
    </style>

    <style name="incomeTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/colorPrimaryIncome</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkIncome</item>
        <item name="colorAccent">@color/colorAccentIncome</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkIncome</item>
    </style>

    <style name="ExpensiveFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimaryExpensive</item>
        <item name="rippleColor">@color/colorAccentExpensive</item>
    </style>

    <style name="IncomeFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimaryIncome</item>
        <item name="rippleColor">@color/colorAccentIncome</item>
    </style>


    <style name="Theme.Organizze" parent="Base.Theme.Organizze" />
</resources>